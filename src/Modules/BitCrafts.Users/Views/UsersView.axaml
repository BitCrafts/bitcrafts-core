<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BitCrafts.Users.Views.UsersView">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Utilisateur" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Prénom :" Width="120"/>
            <TextBox x:Name="FirstNameTextBox" Width="200"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nom :" Width="120"/>
            <TextBox x:Name="LastNameTextBox" Width="200"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Email :" Width="120"/>
            <TextBox x:Name="EmailTextBox" Width="200"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Téléphone :" Width="120"/>
            <TextBox x:Name="PhoneNumberTextBox" Width="200"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Date de naissance :" Width="120"/>
            <CalendarDatePicker x:Name="BirthDatePicker" Width="200"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Numéro national :" Width="120"/>
            <TextBox x:Name="NationalNumberTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Numéro de passeport :" Width="120"/>
            <TextBox x:Name="PassportNumberTextBox" Width="200"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Enregistrer" Click="SaveButton_OnClick" Width="100" Margin="5,0,0,0"/>
            <Button Content="Mettre à jour" Click="UpdateButton_OnClick" Width="100" Margin="5,0,0,0"/>
            <Button Content="Annuler" Click="CancelButton_OnClick" Width="100" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>

</UserControl>

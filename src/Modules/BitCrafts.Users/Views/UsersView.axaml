<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BitCrafts.Users.Views.UsersView">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Gestion des Utilisateurs" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn Header="Téléphone" Binding="{Binding PhoneNumber}" Width="*" />
                <DataGridTextColumn Header="Date de naissance" Binding="{Binding BirthDate}" Width="*" />
                <DataGridTextColumn Header="Numéro national" Binding="{Binding NationalNumber}" Width="*" />
                <DataGridTextColumn Header="Numéro de passeport" Binding="{Binding PassportNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="Détails de l'utilisateur" FontSize="16" FontWeight="Bold" Margin="0,10,0,5" />
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Prénom :" Width="120" />
                <TextBox x:Name="FirstNameTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nom :" Width="120" />
                <TextBox x:Name="LastNameTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Email :" Width="120" />
                <TextBox x:Name="EmailTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Téléphone :" Width="120" />
                <TextBox x:Name="PhoneNumberTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Date de naissance :" Width="120" />
                <CalendarDatePicker x:Name="BirthDatePicker" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Numéro national :" Width="120" />
                <TextBox x:Name="NationalNumberTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Numéro de passeport :" Width="120" />
                <TextBox x:Name="PassportNumberTextBox" Width="200" />
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="AddButton" Content="Ajouter" Width="100" Margin="5,0,0,0" Click="SaveButton_OnClick" />
            <Button x:Name="UpdateButton" Content="Mettre à jour" Width="100" Margin="5,0,0,0" Click="UpdateButton_OnClick" />
            <Button x:Name="DeleteButton" Content="Supprimer" Width="100" Margin="5,0,0,0" Click="CancelButton_OnClick" />
        </StackPanel>
    </StackPanel>
</UserControl>
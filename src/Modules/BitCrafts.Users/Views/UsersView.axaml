<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:entities="clr-namespace:BitCrafts.Users.Abstraction.Entities;assembly=BitCrafts.Users.Abstraction"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             x:Class="BitCrafts.Users.Views.UsersView">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Gestion des Utilisateurs" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False"
                  GridLinesVisibility="All"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  BorderThickness="1" BorderBrush="Gray"
                  Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn x:DataType="entities:User" Header="Prénom" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn x:DataType="entities:User" Header="Nom" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn x:DataType="entities:User" Header="Email" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn x:DataType="entities:User" Header="Téléphone" Binding="{Binding PhoneNumber}"
                                    Width="*" />
                <DataGridTextColumn x:DataType="entities:User" Header="Date de naissance"
                                    Binding="{Binding BirthDate}"
                                    Width="*" />
                <DataGridTextColumn x:DataType="entities:User" Header="Numéro national"
                                    Binding="{Binding NationalNumber}" Width="*" />
                <DataGridTextColumn x:DataType="entities:User" Header="Numéro de passeport"
                                    Binding="{Binding PassportNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="Détails de l'utilisateur" FontSize="16" FontWeight="Bold" Margin="0,10,0,5" />
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Prénom :" Width="120" />
                <TextBox x:Name="FirstNameTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nom :" Width="120" />
                <TextBox x:Name="LastNameTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Email :" Width="120" />
                <TextBox x:Name="EmailTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Téléphone :" Width="120" />
                <TextBox x:Name="PhoneNumberTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Date de naissance :" Width="120" />
                <CalendarDatePicker x:Name="BirthDatePicker" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Numéro national :" Width="120" />
                <TextBox x:Name="NationalNumberTextBox" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Numéro de passeport :" Width="120" />
                <TextBox x:Name="PassportNumberTextBox" Width="200" />
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="AddButton" Content="Ajouter" Width="100" Margin="5,0,0,0" Click="SaveButton_OnClick" />
            <Button x:Name="Closebutton" Content="Quitter" Width="100" Margin="5,0,0,0" Click="Closebutton_OnClick" />
        </StackPanel>
    </StackPanel>
</UserControl>
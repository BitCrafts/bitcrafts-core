<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             x:Class="BitCrafts.Infrastructure.Application.Avalonia.Views.MainView">
    <UserControl.Resources>
        <ControlTemplate x:Key="TabItemTemplate" TargetType="TabItem">
            <Grid>
                <Border BorderBrush="Gray" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <ContentPresenter Content="{TemplateBinding Header}" />
                    </StackPanel>
                </Border>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Grid.Column="0" x:Name="SideMenu" Width="200">
            <Button x:Name="ToggleButton" Content="â˜°" Click="ToggleButton_OnClick" HorizontalAlignment="Left"
                    Margin="5" />
            <ListBox x:Name="MenuItems">
                <ListBoxItem>Menu Item 1</ListBoxItem>
                <ListBoxItem>Menu Item 2</ListBoxItem>
                <ListBoxItem>Menu Item 3</ListBoxItem>
            </ListBox>
        </StackPanel>
        <TabControl Grid.Column="1" x:Name="MainTabControl" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </TabControl>

    </Grid>
</UserControl>
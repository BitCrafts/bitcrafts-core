<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="640" Height="300"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             x:Class="BitCrafts.Infrastructure.Application.Avalonia.Views.ErrorView">
    <Border Padding="20">
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock x:Name="MessageTextBox" TextWrapping="Wrap" />
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                <TextBlock x:Name="StackTraceMessage" TextWrapping="Wrap" />
            </ScrollViewer>
            <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0 10 0 0" Click="OkButton_OnClick" />
        </StackPanel>
    </Border>
</UserControl>
{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss zzz} {Level:u3}] T:{ThreadId}/P:{ProcessId}/M:{MemoryUsage} - {SourceContext}: {Message:lj}{NewLine}{Exception}{Properties:j}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss zzz} {Level:u3}] T:{ThreadId}/P:{ProcessId}/M:{MemoryUsage} - {SourceContext}: {Message:lj}{NewLine}{Exception}{Properties:j}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithProcessId",
      "WithMemoryUsage"
    ]
  },
  "ApplicationSettings": {
    "Id": "com.bit-crafts.gestion-commerciale",
    "Name": "Gestion Commerciale",
    "Version": "1.0.0",
    "Author": "BitCrafts",
    "Type": "avalonia"
  },
  "DatabaseSettings": {
    "Provider": "mariadb",
    "Server": "localhost",
    "Database": "bitcrafts",
    "User": "admin",
    "Password": "admin"
  },
  "ConnectionStrings": {
    "InternalDb": "Data Source=internal.db",
    "MainDb": "server=localhost;database=bitcrafts;user=admin;password=admin;"
  }
}
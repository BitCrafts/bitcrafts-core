{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] (ThreadId: {ThreadId}) (ProcessId: {ProcessId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] (Thread: {ThreadId}) (Process: {ProcessId}) (Machine: {MachineName}) (User: {UserName}) (SourceContext: {SourceContext}) {Message:lj}{NewLine}{Exception}{Properties:j}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithProcessId"
    ]
  },
  "ApplicationSettings": {
    "Id": "com.bit-crafts.gestion-commerciale",
    "Name": "Gestion Commerciale",
    "Version": "1.0.0",
    "Author": "BitCrafts",
    "Type": "avalonia"
  },
  "DatabaseSettings": {
    "Provider": "mariadb",
    "Server": "localhost",
    "Database": "bitcrafts",
    "User": "admin",
    "Password": "admin"
  },
  "ConnectionStrings": {
    "MainDb": "server=localhost;database=bitcrafts;user=admin;password=admin;"
  }
}
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:entities="clr-namespace:BitCrafts.GestionCommerciale.Modules.Clients.Contracts.Entities;assembly=BitCrafts.GestionCommerciale.Modules.Clients.Contracts"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BitCrafts.GestionCommerciale.Modules.Clients.Views.MainClientControlView">

    <Grid RowDefinitions="Auto,*">
        <!-- Titre -->
        <TextBlock Text="Gestion des Clients"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,10,0,20" />

        <!-- Corps : Liste de clients et formulaire -->
        <Grid Row="1" ColumnDefinitions="2*,3*" Margin="0,10,0,0">
            <!-- Liste des clients -->
            <ListBox x:Name="ClientsListBox"
                     Grid.Column="0"
                     SelectionMode="Single"
                     Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="entities:IClient">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="{Binding Nom}" FontWeight="Bold" />
                            <TextBlock Text="Adresse: {Binding Adresse}" />
                            <TextBlock Text="Téléphone: {Binding Telephone}" />
                            <TextBlock Text="Email: {Binding Email}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Formulaire de gestion -->
            <StackPanel Grid.Column="1" Margin="10" Spacing="10">
                <TextBlock Text="Formulaire Client" FontSize="14" FontWeight="Bold" />

                <TextBox x:Name="NomTextBox" />
                <TextBox x:Name="AdresseTextBox" />
                <TextBox x:Name="TelephoneTextBox" />
                <TextBox x:Name="EmailTextBox" />

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="AddClientButton" Content="Ajouter" />
                    <Button x:Name="UpdateClientButton" Content="Modifier" />
                    <Button x:Name="DeleteClientButton" Content="Supprimer"
                            Background="Red"
                            Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>